<div style="padding-top: 15px; padding-left: 30px; padding-right: 30px">
  <h2>Posts</h2>
  <% @posts.each do |post| %>
    <div class="alert alert-light">
    <h3> <%= post.title %></h3>
    <p> <%= post.body %></p>
      <%= link_to "Read more...", post_path(post), :class => 'btn btn-outline-primary' %>
    <br>
    </div>
  <% end %>
</div>
